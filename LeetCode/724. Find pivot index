class Solution {
public:
    int leftsum(vector<int>& nums, int i){
        int leftsum = 0;
        if(i == 0){
            leftsum = 0;
        }
        else{
            for(int m = 0; m < i ; m++){
            leftsum += nums[m];
        }}
        return leftsum;
    }
   
    int pivotIndex(vector<int>& nums) {
        int sum =0;
        int i = 0, m =0,n =0;
        int res = -1;

        for( int num =0; num<nums.size();num++){
            sum += nums[num];
        }
        while(i<nums.size()){
            m = leftsum(nums,i);
            n = sum - m - nums[i];
            if(m == n){
                res = i;
                break;
            }
            else{
                i++;
            }
           
        }
        return res;
    }
};
