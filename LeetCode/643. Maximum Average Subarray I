class Solution {
public:
    double findMaxAverage(vector<int>& a, int k) {
        double avg =0, res =0, sum = 0; 
        int n = a.size();
        for(int i =0; i<k; i++){
            sum += a[i];
            avg = sum / k;
        }
        res = avg;

        for(int i = k; i < n; i++){
            sum += a[i] - a[i-k]; 
            avg = sum / k;
            res = max(res, avg);
        }
        return res;
    }
};
