class Solution {
public:
    int numOfSubarrays(vector<int>& arr, int k, int t) {
        int count = 0, avg = 0, sum = 0, n = arr.size();

        for(int i = 0; i < k; i++){
            sum += arr[i];
        }
        avg = sum / k;
        if(avg >= t){
            count++;
        }

        for(int i = k; i < n; i++){
            sum += arr[i] - arr[i-k];
            avg = sum / k;
            if(avg >= t){
                count++;
            } 
        }
        return count;
    }
};
